{
  "name": "skyline",
  "version": "1.0.0-alpha",
  "author": "yealink",
  "license": "MIT",
  "keywords": [
    "vue",
    "component"
  ],
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "entry": "node scripts/component-entry.js",
    "serve": "vue-cli-service serve:playground",
    "build": "vue-cli-service build:skyline",
    "serve:playground": "vue-cli-service serve:playground",
    "build:playground": "vue-cli-service build:playground",
    "serve:website": "vue-cli-service serve:website",
    "build:website": "vue-cli-service build:website",
    "test:unit": "vue-cli-service test:unit",
    "lint": "vue-cli-service lint",
    "lint:style": "stylelint 'src/**/*.scss'"
  },
  "gitHooks": {
    "pre-commit": "",
    "commit-msg": "node scripts/verify-commit.js"
  },
  "lint-staged": {
    "*.{ts,tsx,js,vue}": [
      "vue-cli-service lint --fix",
      "git add"
    ],
    "*.{vue,css,less}": [
      "stylelint 'src/**/*.scss' -- --fix",
      "git add"
    ]
  },
  "sideEffects": true,
  "dependencies": {
    "core-js": "^3.3.3",
    "popper.js": "^1.16.0",
    "swiper": "^5.2.0",
    "vue": "^2.6.10"
  },
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "@vue/cli-plugin-babel": "^4.0.0",
    "@vue/cli-plugin-eslint": "^4.0.0",
    "@vue/cli-plugin-router": "^4.0.0",
    "@vue/cli-plugin-typescript": "^4.0.0",
    "@vue/cli-plugin-unit-jest": "^4.0.0",
    "@vue/cli-service": "^4.0.0",
    "@vue/eslint-config-airbnb": "^4.0.0",
    "@vue/eslint-config-typescript": "^4.0.0",
    "@vue/test-utils": "1.0.0-beta.29",
    "chalk": "^2.4.2",
    "commander": "^4.0.0",
    "eslint": "^5.16.0",
    "eslint-plugin-vue": "^5.0.0",
    "execa": "^3.2.0",
    "lint-staged": "^9.4.2",
    "sass": "^1.19.0",
    "sass-loader": "^8.0.0",
    "stylelint": "^11.1.1",
    "typescript": "~3.5.3",
    "vue-router": "^3.1.3",
    "vue-template-compiler": "^2.6.10"
  },
  "vuePlugins": {
    "service": [
      "packages/cli/build.js",
      "packages/cli/lint.js",
      "packages/cli/serve.js"
    ]
  }
}
