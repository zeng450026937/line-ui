{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "allowJs": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    // "declaration": true,
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "./out",
    "types": [
      "webpack-env",
      "jest"
    ],
    "paths": {
      "@/*": ["src/*"],
      "@skyline/*": ["packages/*/src"],
      "skyline": ["packages/skyline"],
      "skyline/*": ["packages/skyline/*"],
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "packages/*/src",
    "packages/*/__tests__",
    "src",
    "tests",
    "types"
  ],
  "exclude": [
    "node_modules",
    "packages/*/test",
  ]
}
